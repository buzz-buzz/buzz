doctype html
html
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge, chrome=1")
    meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0")
    title='Buzzbuzz English'
body
    style.
        button {
            font-size: 6vw;
            color: #333333;
            border-radius: 4px;
            background-color: #f9b600;
            height: 13.6vw;
            line-height: 13.6vw;
            border: none;
        }
        body {
            margin: 0px;
        }
        .head {
            width: 100vw;
            height: 17vw;
            background-color: #f9b600;
            position: absolute;
        }
        .title {
            width: 100vw;
            height: 17vw;
            line-height: 17vw;
            text-align: center;
            font-size: 6vw;
            color: #333333;
        }
        .back {
            height: 17vw;
            line-height: 17vw;
            font-size: 8vw;
            color: #333333;
            position: absolute;
            top: 0px;
            left: 8vw;
        }
        a {
            text-decoration: none;
        }
        .input-container {
            position: absolute;
            left: 10vw;
            width: 80vw;
            padding-bottom: 1.7vw;
            border-bottom: 1px solid #aaaaaa;
        }
        .left-row {
            display: inline-block;
        }
        .phone {
            position: absolute;
            top: 32.5vw;
        }
        input[type=phone],
        input[type=password],
        input[type=text] {
            vertical-align: top;
            font-size: 4.5vw;
            width: 50vw;
            border: none;
            background-color: transparent;
        }
        input[type=phone]:focus,
        input[type=password]:focus,
        input[type=text]:focus {
            outline: none;
            background-color: transparent;
        }
        .label {
            font-size: 4vw;
            width: 18vw;
            display: inline-block;
            text-align: left;
        }
        .captcha {
            position: absolute;
            right: 0px;
            bottom: 0px;
        }
        .captcha img {
            width: 19vw;
        }
        .captchabox {
            top: 49.5vw;
        }
        .verification-box {
            top: 66.5vw;
        }
        .newpassword {
            top: 83.5vw;
        }
        .verification-box button {
            width: 19vw;
            position: absolute;
            right: 0px;
            bottom: 1.7vw;
            height: 8.5vw;
            line-height: 4.2vw;
            font-size: 3.5vw!important;
            color: white;
        }
        .finish {
            position: absolute;
            top: 100.5vw;
            left: 10vw;
            width: 80vw;
        }
        button:disabled,
        .button:disabled {
            opacity: 0.5;
        }
    .head
        .title 找回密码
        a.back(onClick="history && history.back()") <
    .body(ng-app="resetPasswordModule")
        form(name="resetPasswordForm", ng-submit="resetPassword()", ng-controller="resetPasswordCtrl")
            .left-row.phone.input-container
                .label 手机号
                input(type="phone", placeholder="请输入注册的手机号码", ng-model="signUpData.mobile", ng-required="true", maxlength="11", minlength="11")
            .left-row.captchabox.input-container
                .label 图形码
                input(type="text", placeholder="请输入图形验证码", ng-model="signUpData.captcha", ng-required="true", maxlength="4", minlength="4")
                .captcha(ng-model="signUpData.captchaId", captcha)
            .left-row.verification-box.input-container
                .label 验证码
                input(type="text", placeholder="请输入短信验证码", ng-model="signUpData.verificationCode", ng-required="true", maxlength="6", minlength="6")
                resend-verification
            .left-row.newpassword.input-container
                .label 新密码
                input(type="password", placeholder="请设置您的新密码", ng-model="signUpData.password", ng-required="true", minlength="6", maxlength="20")
            button.finish(type="submit", ng-disabled="!resetPasswordForm.$valid") 完成
    include ../js
    script(src=`${config.cdn}/public/js/formModule.min.js?${config.version}`)
    script(src=`${config.cdn}/public/js/educationModule.min.js?${config.version}`)
    script(src=`${config.cdn}/public/js/resetPasswordModule.min.js?${config.version}`)