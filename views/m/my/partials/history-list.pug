.history-list(style='margin-bottom:2em;', ng-repeat="lesson in courseList track by $index")
    .ui.card(style='width:100%;')
        .image(style='min-height: 210px;')
            img(ng-src="{{lesson.image}}", ng-click='aLikeClick("/m/my/today?date="+lesson.date+"&cat="+ lesson.category.toLowerCase()+"&level="+lesson.level)')
        .content(style='font-size:1.5em;')
            .meta
                .description(style='color: #f7b52a;', ng-click='aLikeClick("/m/my/today?date="+lesson.date+"&cat="+ lesson.category.toLowerCase()+"&level="+lesson.level)', ng-cloak) {{lesson.title}}
                span.date(ng-cloak) {{lesson.date}}
                .tag-meta(ng-show='lesson.tags.length !== 0', ng-cloak)
                    .tags(ng-repeat="tag in lesson.tags track by $index")
                        span(ng-cloak) {{tag}}
        .extra.content
            .ui.grid
                .row(style='position: relative;')
                    .data(style='width: 45%; float: left;')
                        a
                            i.users.icon
                            span(ng-cloak, style='color: #f7b52a;') {{lesson.baseNumber || 0}}人
                            span 参加课程
                    .data(style='text-align: right; width: 45%; float: right;')
                        a
                            i.student.icon
                            span(ng-cloak, style='color: #f7b52a;') {{lesson.visited_time || 0}}人
                            span 完成学习
include ../../../partial/loading
.btn(style='position: relative; width: 100%; padding: 0;')
    .button(style='background:#e8e8e8;text-align: center;padding:.4em; display: inline-block; width: 45%; float: left;', ng-click='refreshPage()') 返回最新课程
    .button(style='background:#e8e8e8;text-align: center;padding:.4em; display: inline-block; width: 45%; float: right;', ng-click='loadMore()') 加载更多历史
