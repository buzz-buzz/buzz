extends layout

block content
    .grid
        .column
            ul
                li 创建账号
                li 信息填写
        .one.wide.column
        .column
            form(name="signUpForm")
                .field
                    label 手机号码
                        input(type="number", placeholder="请输入您的手机号码")
                .field
                    label 人机验证
                .field
                    label 短信验证码
                        input(type="number", placeholder="请输入您收到的短信验证码")
                .field
                    label 设置密码
                        input(type="password", placeholder="请设置您的密码")
                .field
                    button(type="submit") 下一步
                .field
                    .center.aglined.container
                        input(type="checkbox")
                        label 我已阅读并同意
                            a(href="/agreement") 《BUZZ 用户注册协议》

            form(name="infoForm")
                .field
                    label 姓名
                        input(type="text", placeholder="请输入您的姓名")
                .field
                    label 性别
                        input(type="radio")
                        label 金童
                        span.space
                        input(type="radio")
                        label 玉女
                .field
                    label 年级
                        select

                .field
                    label 喜欢的主题
                        select
                .field
                    label 选择难度版本
                    input(type="radio")
                    label 基础（推荐1~3年级）
                    br
                    input(type="radio")
                    label 进阶（推荐4~6年级）

                .field
                    button(type="submit") 完成