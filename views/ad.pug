        script.
            var animate = true;
            $(window).scroll(function () {
                if (($(document).scrollTop()+300 >= $('.gift-animate').offset().top)&&animate) {
                    animate = false;
                    $('.gift-animate').animate({
                        height: '0',
                        opacity: '0',
                        width: '0',
                        top: '50%',
                        left: '50%'
                    }, 2000);
                    //定时器弹出礼物
                    setTimeout(function () {
                        //弹出四个选项的动画
                        $('.gifts >.gift-item:nth-child(1)').animate({
                            opacity: '1',
                            width: '100%',
                            top: '0',
                            left: '0'
                        }, 1200);
                        $('.gifts >.gift-item:nth-child(2)').animate({
                            opacity: '1',
                            width: '100%',
                            top: '27%',
                            left: '0'
                        }, 800);
                        $('.gifts >.gift-item:nth-child(3)').animate({
                            opacity: '1',
                            width: '100%',
                            top: '54%',
                            left: '0'
                        }, 1000);
                        $('.gifts >.gift-item:nth-child(4)').animate({
                            opacity: '1',
                            width: '100%',
                            top: '81%',
                            left: '0'
                        }, 500);
                    }, 2000)
                }
            });
