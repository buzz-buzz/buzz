doctype html
html
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge, chrome=1")
        meta(name="viewport", content="width=device-width, user-scalable=no")
        title Buzzbuzz English
        style.
            body, div {
                padding: 0;
                margin: 0;
            }

            a {
                color: black;
                text-decoration: none;
            }

            .margin-b {
                margin-bottom: .5em;
            }

            .box {
                box-sizing: border-box;
            }

            .img-top {
                position: absolute;
                top: 0;
                width: 100%;
                z-index: 1;
            }

            .img-top img {
                width: 100%;
            }

            .translate-img {
                transform: rotate(180deg);
                -ms-transform: rotate(180deg); /* IE 9 */
                -moz-transform: rotate(180deg); /* Firefox */
                -webkit-transform: rotate(180deg); /* Safari 和 Chrome */
                -o-transform: rotate(180deg); /* Opera */
            }

            .translate-img-y {
                transform: rotateY(180deg);
                -ms-transform: rotateY(180deg); /* IE 9 */
                -moz-transform: rotateY(180deg); /* Firefox */
                -webkit-transform: rotateY(180deg); /* Safari 和 Chrome */
                -o-transform: rotateY(180deg); /* Opera */
            }

            .line-height-lit {
                line-height: 1.5em;
            }

            .middle {
                margin: 0 auto;
            }

            .middle-word {
                margin: 0 auto;
                display: table;
            }

            .border-b {
                border-bottom: 2px dotted #f7b52a;
            }

            .word {
                font-family: "微软雅黑", "Helvetica Neue", Helvetica, Arial, sans-serif;
                font-size: 1em;
                padding-top: .8em;
            }

            .main-page {
                position: absolute;
                z-index: 999;
                display: block;
                box-sizing: border-box;
                margin: .5em 5% 1em 5%;
                padding: .2em 5% 1em 5%;
                width: 90%;
                min-height: 800px;
                border-bottom: 2px solid #aaa;
                border-top: 2px solid #aaa;
            }

            .main-page > .item {
                width: 100%;
            }

            .border-outside-right {
                height: 100%;
                position: absolute;
                top: 0;
                right: 0;
                border-left: 2px solid #aaa;
            }

            .border-outside-left {
                height: 100%;
                position: absolute;
                left: 0;
                top: 0;
                border-left: 2px solid #aaa;
            }

            .litter-title {
                color: #FFFFFF;
                font-size: 1.5em;
                font-family: "微软雅黑", "Helvetica Neue", Helvetica, Arial, sans-serif;
                padding: 8px 0;

            }

            .to-teacher {
                margin-top: 2em;
            }

            .title-teacher {
                margin: 1.5em 0 1em 0;
                letter-spacing: .1em;
                width: 100%;
                background-color: #fff;
                color: #fff;
                font-weight: 500;
                height: 2em;
                line-height: 2em;
                font-size: 1em;
                text-align: center;
                position: relative;
            }

            .title-teacher > img {
                width: 100%;
            }

            .title-teacher > div {
                position: absolute;
                display: table;
                margin: 0 auto;
                top: 5%;
                width: 60%;
                left: 20%;
                font-size: 1.2em;
            }

            .teacher-gift {
                color: #f7b52a;
                margin-bottom: .5em;
            }

            .ours-features {
                margin-top: .5em;
                width: 100%;
            }

            .ours-features > div {
                display: inline-block;
            }

            .ours-features > .fea-dot {
                width: 20%;
                height: 100%;
                border-bottom: 2px dotted #f7b52a;
            }

            .ours-features > .fea-word {
                width: 35%;
                text-align: center;
                font-size: .8em;
            }

            .ours-features > .img {
                width: 12.5%;
            }

            .fea-list {
                width: 33%;
                display: inline-block;
                margin: 1em 0;
            }

            .fea-list > img {
                width: 45%;
                display: block;
                margin: 0 auto;
            }

            .fea-list > div {
                text-align: center;
            }

            .full-width {
                width: 100%;
            }

            .half-width {
                width: 50%;
            }

            .feature-list {
                border-bottom: 2px dotted #f7b52a;
            }

            .feature-list > div {
                display: inline-block;
            }

            .gifts {
                position: relative;
                height:10em;
            }

            .gifts > .gift-item {
                height: 2em;
                line-height: 2em;
                font-size: 1em;
                margin-bottom: 2px;
                padding: .3em 0;
                background-color: #FFF5DE;
                color: #000;
                text-align: center;
                position: absolute;
                opacity: 0;
                top:25%;
                left:25%;
                width:0;
            }



            .item.gift-title {
                width: 100%;
                height: auto;
                color: #FFB500;
                font-size: 1em;
                text-align: center;
                font-weight: 500;
                margin-bottom: .5em;
            }

            .gift-animate {
                position: absolute;
                width: 100%;
                height: 100%;
                z-index: 1000;
            }

            .heart-move {
                margin: 1em 0;
                width: 100%;
                color: #FFB500;
                font-size: 1em;
                text-align: center;
                font-weight: 500;
                box-sizing: border-box;
                height: 2em;
            }

            .heart-move div {
                width: 20%;
                box-sizing: border-box;
                display: inline-block;
                height: 100%;
            }

            .heart-img > img {
                width: 30%;
                display: inline-block;
                margin-left: 10%;
                vertical-align: middle;

            }

            .heart-img {
                display: inline-flex;
                align-items: center;
            }

            .sign-up-link {
                display: flex;
                align-items: center;
                margin-top: 1.5em;
            }

            .sign-up-link img {
                vertical-align: middle;
            }

            .padding-b {
                padding-bottom: 1.5em;
            }

            .padding-t {
                padding-top: 1.5em;
            }

            span.important {
                font-weight: bold;
                color: #FFB600;
            }

            .bottom-createdby .img-left {
                width: 20%;
                display: inline-block;
                vertical-align: middle;
            }

            .bottom-sherily {
                width: 60%;
                display: inline-block;
                color: #FFB600;
                text-align: center;
            }

            .bottom-sherily div {
                margin-top: .5em;
            }

            .question-body {
                position: relative;
                margin-top: .5em;
                min-height: 15em;
                margin-bottom: 1em;
            }

            .question-body > .back-img {
                position: absolute;
                margin-left: -15%;
                width: 130%;
                z-index: -20;
            }

            .question-body > .question {
                position: absolute;
                z-index: 100;
            }

            .question-body > .question > .question-list {
                width: 100%;
            }

            .question-body > .question .question-list-title {
                font-weight: 400;
                color: snow;
                margin: .1em 0;
            }

            .question-body > .question > .question-list > span {
                font-size: .8em;
                color: #F2F2F2;
            }
            .question-body > .question > .question-list>.div{
                font-size: .8em;
                color: #F2F2F2;
            }

            @media screen and (min-width: 410px) {
                .question-body {
                    margin-bottom: 3em;
                }
            }

            @media screen and (max-width: 320px) {
                .question-body {
                    margin-top: 0;
                }

                .question-body .question-list:nth-child(3) {
                    display: none;
                    margin-bottom: 0;

                }
            }

            .gift-animate {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: #FFF5DE;
            }

            .gift-animate > img {
                display: block;
                margin: 0 auto;
            }

            @keyframes open-gift {
                0% {
                    width: 100%;
                    height: 100%;
                    top: 0;
                    left: 0;
                    display: block;
                    opacity: 1;
                }
                100% {
                    height: 0;
                    opacity: 0;
                    display: none;
                    width: 0;
                    top: 50%;
                    left: 50%;
                }
            }

