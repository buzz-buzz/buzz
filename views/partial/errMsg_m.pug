style.
    .errmsg {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        width: 100%;
        height: 100%;
        display: block;
        z-index:999;
    }

    .errmsg > div {
        display: table;
        position: relative;
        top: 40%;
        margin: 0 auto;
        color: white;
        background-color: #333;
        border-radius: 0.3rem;
        font-family: "微软雅黑", "Helvetica Neue", Helvetica, Arial, sans-serif;
        width: auto;
        font-size: 1rem;
        line-height: 1.5rem;
        padding: 1rem;
        text-align: center;
    }


div.errmsg(ng-if="errorMessage", ng-cloak, ng-click="errDone()")
    div {{errorMessage}}