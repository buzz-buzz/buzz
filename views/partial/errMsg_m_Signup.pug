style.
    .container_err {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        width: 100%;
        height: 100%;
        display: block;
        background-color: rgba(187, 187, 187, 0.5);
    }

    .container_err>.msg {
        margin: 0 auto;
        position: relative;
        top: 30%;
        background-image: url("../../public/images/msg.png");
        background-repeat: no-repeat;
        width: 90%;
        height: 403px;
        overflow: hidden;
        border-radius: 10px;
    }

    .container_err>.msg>.msg_word {
        height: 40%;
        width: 100%;
        font-size: 2.2rem;
        font-family: "微软雅黑", "Helvetica Neue", Helvetica, Arial, sans-serif;
        line-height: 10rem;
        margin: 22% 0 0 0;
        padding-left: 3rem;
        box-sizing: border-box;
        z-index: 888;
        border-top-right-radius: 8px;
        border-top-left-radius: 10px;
        background-color: white;
    }

    .container_err>.msg>.msg_btn {
        height: 25%;
        width: 100%;
        margin: 1% 0 0 0;
    }

    .container_err>.msg>.msg_btn > a {
        width: 49%;
        height: 100%;
        line-height: 6rem;
        text-align: center;
        margin: 0;
        box-sizing: border-box;
        display: inline-block;
        text-decoration: none;
        font-size: 2.2rem;
        font-family: "微软雅黑", "Helvetica Neue", Helvetica, Arial, sans-serif;
        color: #111111;
    }

