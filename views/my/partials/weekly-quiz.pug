.item(ng-show="$root.tabularIndex===3", ng-controller="weeklyQuizCtrl")
    .weekly-meau(ng-show="weeklyStatus=='menu'",ng-cloak)
        .img(style='width:30%;margin:30px auto;margin-top:50px;')
            img(style='width:50%;',src='http://resource.buzzbuzzenglish.com/image/weeklyquiz.png')
        div(style="display: flex; width:40%;margin:0 auto;")
            a.button.yellow.exercisebutton(ng-click="turnTo('grade')", style="padding: .5em 0 !important;text-decoration: none;margin:0 auto;width:35%;") 查看成绩
            a.button.yellow.exercisebutton(ng-hide="true", ng-click="turnTo('exercise')", style="flex: 1;padding: .5em 0 !important;text-decoration: none;color: #f6b52a!important;background-color: #fff!important;border:1px solid #f6b52a;") 重新测试
    .weekly-grade(ng-show="weeklyStatus=='grade'",ng-cloak)
        .grade-title(style='background:#fff url(http://resource.buzzbuzzenglish.com/weekly_grade.png) no-repeat center;color:white;') 成绩单
        .grade-body
            .course
                .title 得分
                .span(ng-cloak) {{grade}}
            .content
                .title 得分详情
                .detail(ng-repeat="details in score")
                    .detail-title(style='font-weight:bold;') {{details.type}}
                    .detail-con 共{{details.total_sum}}题
                    .detail-con 答对{{details.correct}}题
                    .detail-con 获得{{details.score}}分
        a.button(ng-click="turnTo('menu')",ng-cloak) 返回
        | &nbsp;&nbsp;
        a.button(ng-click="turnTo('exercise')",ng-cloak, ng-hide="done") 继续测试
    .exercise.container.cube(ng-show="weeklyStatus=='exercise'")
        .cube-side.side-a
            .progress
                span {{currentIndex+1}}/{{arrayWeeklyQuiz.length}}
                .percent
                    #progress-bar.tab &nbsp;
            .exercise-container
                .exercise-body(style='width: 80%;height: 350px;',ng-class="{ 'rtom':animateDirection==='rtom'}")
                    iframe(id="weekly-quiz-frame", frameborder="0", style="width: 100%; height: 100%;", ng-src="{{currentQuiz.quiz}}")
                .right.arrow(style='width:20%;', ng-click="nextQuiz()",ng-hide="currentIndex+1>=arrayWeeklyQuiz.length")
                    span.icon-circle-right
            a.button(ng-click="turnTo('menu')", style='margin-top:10px;', ng-show="currentIndex+1 < arrayWeeklyQuiz.length") 返回
            a.button(ng-click="turnTo('grade')", style='margin-top:10px;', ng-show="currentIndex+1 >= arrayWeeklyQuiz.length") 查看成绩